{
  "extends": "eslint-config-airbnb",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "rules": {
    "global-require": 0,
    "indent": [2, 2],
    "no-plusplus": 0,
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-filename-extension": 0,
    "react/prefer-es6-class": 0,
    "react/forbid-prop-types": 0,
  },
  "plugins": [
    "react", "import"
  ],
  "globals": {
    __DEVELOPMENT__: true
  }
}
